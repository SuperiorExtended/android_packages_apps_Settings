<resources>

    <!-- custom Action Bar -->
    <style name="custom_toolbar.Expanded" parent="custom_toolbar.Collapsed">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">47dp</item>
        <item name="android:layout_marginBottom">@dimen/homepage_title_margin_bottom</item>
        <item name="android:layout_marginStart">@dimen/homepage_title_margin_horizontal</item>
        <item name="android:layout_marginEnd">75dp</item>
        <item name="android:textSize">35dp</item>
        <item name="android:textColor">@color/settingslib_text_color_primary_device_default</item>
        <item name="android:fontFamily">@*android:string/config_headlineFontFamilyMedium</item>
    </style>
    <style name="custom_toolbar.Collapsed"
        parent="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Title">
        <item name="android:fontFamily">@string/settingslib_config_headlineFontFamily</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/settingslib_text_color_primary_device_default</item>
    </style>
    
    <style name="superiorDashboardPreferenceSingleAccent">
        <item name="android:background">@drawable/superior_preference_background_single_accent</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>
    
    <style name="text_style" parent="@style/text_style_base">
        <item name="android:textSize">18.0sp</item>
        <item name="android:fontFamily">@*android:string/config_headlineFontFamilyMedium</item>
    </style>

    <style name="text_style_base">
        <item name="android:breakStrategy">simple</item>
    </style>
    
    <style name="TextAppearance.SuperiorInfoTitle">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">12sp</item> <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.SuperiorInfoSummary"> 
        <item name="android:textColor">?android:attr/textColorSecondary</item> 
        <item name="android:textSize">12.5sp</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
        <item name="android:fontFamily">sans-serif-book</item>
    </style>

    <style name="op_control_text_style_base">
        <item name="android:breakStrategy">simple</item>
    </style>
    
    <style name="op_control_text_style_h6" parent="@style/op_control_text_style_base">
        <item name="android:textSize">18.0sp</item>
        <item name="android:fontFamily">@*android:string/config_headlineFontFamilyMedium</item>
    </style>

    <style name="LockPatternSizeHeaderStyle" parent="android:style/TextAppearance.Material.Subhead">
        <item name="android:paddingTop">16dp</item>
        <item name="android:textColor">@color/primary_dark_material_light</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>
</resources>
